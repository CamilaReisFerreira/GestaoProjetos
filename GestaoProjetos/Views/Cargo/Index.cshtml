@model IEnumerable<GestaoProjetos.DTO.Cargo>

@{
    ViewData["Title"] = "Cargos";
}

<h2>Cargos</h2>

<p>
    <a asp-action="Create">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id_Cargo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Cargo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id_Cargo }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id_Cargo }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.Id_Cargo })
            </td>
        </tr>
}
    </tbody>
</table>
