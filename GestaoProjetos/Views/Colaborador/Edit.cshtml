@model GestaoProjetos.DTO.Colaborador

@{
    ViewData["Title"] = "Colaboradores";
}

<h2>Editar Colaborador</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id_Colaborador" class="control-label"></label>
                <input asp-for="Id_Colaborador" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cargo" class="control-label"></label>
                <select asp-for="Cargo.Id_Cargo" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Cargos,"Id_Cargo","Descricao"))"></select>
                <span asp-validation-for="Cargo.Id_Cargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a listagem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
