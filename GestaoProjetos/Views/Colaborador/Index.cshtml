@model IEnumerable<GestaoProjetos.DTO.Colaborador>

@{
    ViewData["Title"] = "Colaboradores";
}

<h2>Colaboradores</h2>

<p>
    <a asp-action="Create">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id_Colaborador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cargo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Colaborador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo.Descricao)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id_Colaborador }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id_Colaborador }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.Id_Colaborador })
            </td>
        </tr>
}
    </tbody>
</table>
