@model IEnumerable<GestaoProjetos.DTO.HorasColaborador>

@{
    ViewData["Title"] = "Tarefas - Horas";
}

<h2>Tarefas - Horas</h2>

<p>
    <a asp-action="Create">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id_HorasColaborador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Horas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tarefa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Colaborador)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_HorasColaborador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Horas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(model => item.Tarefa.Descricao)
            </td>
            <td>
                @Html.DisplayFor(model => item.Colaborador.Nome)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id_HorasColaborador }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id_HorasColaborador }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.Id_HorasColaborador })
            </td>
        </tr>
        }
    </tbody>
</table>
